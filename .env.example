# Database
DATABASE_URL=postgresql://postgres:password@postgres:5432/game
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=game

# Redis
REDIS_URL=redis://redis:6379/0

# NATS
NATS_URL=nats://nats:4222

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# API
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4318
OTEL_SERVICE_NAME=multiplayer-platform
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=prometheus

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Matchmaker
MM_TICK_INTERVAL_MS=200
MM_MAX_WAIT_TIME_SECONDS=120
MM_MMR_BAND_INITIAL=100
MM_MMR_BAND_MAX=500
MM_MMR_BAND_GROWTH_PER_SECOND=10

# Environment
ENV=development
LOG_LEVEL=INFO
